def print_pyramid(n):
    for i in range(n):
        print(' ' * (n - i - 1), end='')
        print('*' * (2 * i + 1))

def print_reverse_pyramid(n):
    for i in range(n-1, -1, -1):

        print(' ' * (n - i - 1), end='')
        print('*' * (2 * i + 1))

n = int(input("Enter the number of rows: "))

print("Pyramid:")
print_pyramid(n)

print("\nReverse Pyramid:")
print_reverse_pyramid(n)
